{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-11 build active file",
            "command": "/usr/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-m32",
                "-no-pie",
                "-Wl,-Ttext-segment=0x20000000",
                "-g",
                "${fileDirname}/${fileBasename}",
                "${workspaceFolder}/loader//**.c",
                "${workspaceFolder}/loader//**.h",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
